<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="310pt"
        android:layout_height="200pt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_upgrade"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_marginRight="40pt"
            android:layout_height="70pt"
            tools:text="1,虚拟按键优化;\n23dsfsdf\n社法委\nfasdfeffef"
            android:textSize="13pt"
            android:textColor="#555555"
            android:layout_marginTop="50pt"
            android:layout_marginLeft="40pt"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:background="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/versionchecklib_version_dialog_commit"
                android:layout_width="wrap_content"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:checked="true"
                android:textSize="13pt"
                android:button="@null"
                android:text="立即更新"
                android:gravity="center"

                android:textColor="#dd9d03"
                />
            <TextView
                android:id="@+id/versionchecklib_version_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:button="@null"
                android:textSize="13pt"
                android:gravity="center"
                android:text="下次再说"

                android:textColor="#555555"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>