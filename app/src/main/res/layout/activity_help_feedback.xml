<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0F0C3A"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230pt"
        android:layout_marginStart="15pt"
        android:layout_marginTop="24.5pt"
        android:layout_marginEnd="15pt"
        android:background="@drawable/bzfk_bg">

        <EditText
            android:id="@+id/et_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12.5pt"
            android:layout_marginTop="12pt"
            android:layout_marginEnd="5pt"
            android:background="@null"
            android:hint="欢迎提问题或建议，这对我们将是巨大的帮助！"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/text_48"
            android:textColorHint="@color/text_9C"
            android:textSize="12dp"
            android:gravity="top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="bottom|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_input_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_9C"
                android:textSize="13pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/text_9C"
                android:textSize="13pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="@color/text_9C"
                android:textSize="13pt" />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15pt"
        android:layout_marginTop="30pt"
        android:text="联系方式"
        android:textColor="@color/white"
        android:textSize="18pt"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_lxfs"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginStart="15pt"
        android:layout_marginTop="10pt"
        android:layout_marginEnd="15pt"
        android:background="@drawable/bzfk_lxfs"
        android:hint="请留下Email、QQ、微信或手机号，以便回复"
        android:paddingStart="15pt"
        android:textColor="#484848"
        android:textColorHint="#9C9C9C"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_fs"
        android:layout_width="match_parent"
        android:layout_height="45pt"
        android:layout_marginStart="15pt"
        android:layout_marginTop="30pt"
        android:layout_marginEnd="15pt"
        android:background="@drawable/ic_black_box"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17pt"
        android:textStyle="bold" />

<!--    <TextView-->
<!--        android:id="@+id/tv_fs_erro"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center_vertical"-->
<!--        android:drawableLeft="@mipmap/fs_erro"-->
<!--        android:text="异常，请重新发送"-->
<!--        android:textColor="@color/text_FF"-->
<!--        android:textSize="14pt"-->
<!--        android:textStyle="bold"-->
<!--        android:layout_marginStart="15pt"-->
<!--        android:layout_marginTop="15pt"-->
<!--        android:visibility="gone"/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginBottom="37pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22pt"
                    android:layout_height="22pt"
                    android:src="@drawable/bzfk_wx"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服微信：13392189460"
                    android:textColor="@color/white"
                    android:textSize="14pt"
                    android:textStyle="bold"
                    android:layout_marginStart="5pt"/>

                <TextView
                    android:id="@+id/tv_wx_fz"
                    android:layout_width="50pt"
                    android:layout_height="24pt"
                    android:layout_marginStart="25pt"
                    android:background="@drawable/ic_black_box_empty"
                    android:gravity="center"
                    android:text="复制"
                    android:textColor="@color/white"
                    android:textSize="14pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="25pt">

                <ImageView
                    android:layout_width="22pt"
                    android:layout_height="22pt"
                    android:src="@drawable/bzfk_qq"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tv_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服QQ：2058582947"
                    android:textColor="@color/white"
                    android:textSize="14pt"
                    android:textStyle="bold"
                    android:layout_marginStart="5pt"/>

                <TextView
                    android:id="@+id/tv_qq_fz"
                    android:layout_width="50pt"
                    android:layout_height="24pt"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/ic_black_box_empty"
                    android:gravity="center"
                    android:text="复制"
                    android:textColor="@color/white"
                    android:textSize="14pt"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>