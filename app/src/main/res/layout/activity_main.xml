<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_common_line"
    android:orientation="vertical"

    tools:context=".main.MainActivity">

    <com.xzq.module_base.views.NoScrollViewPager

        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1" />

    <com.jpeng.jptabbar.JPTabBar
        android:background="@color/color_0F0C3A"

        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="49pt"
        android:layout_gravity="bottom"
        android:paddingLeft="10pt"
        android:paddingRight="10pt"
        jp:TabAnimate="None"
        jp:TabIconSize="20pt"
        jp:TabMargin="6pt"
        jp:TabMiddleBottomDis="3pt"
        jp:TabMiddleHMargin="70pt"
        jp:TabNormalColor="@color/main_tab_sele"
        jp:TabSelectColor="@color/main_tab_nor"
        jp:TabTextSize="12pt" />

</LinearLayout>